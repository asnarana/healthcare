{
  "dashboard": {
    "title": "Data Ingestion Health",
    "tags": ["ingestion", "health"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Ingestion Job Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ingestion_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile - {{source}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(ingestion_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile - {{source}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Records Processed",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "rate(ingestion_records_total[5m])",
            "legendFormat": "{{source}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Records/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Ingestion Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(ingestion_errors_total[5m])",
            "legendFormat": "{{source}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Errors/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Job Status by Source",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum by (source, status) (ingestion_records_total)",
            "format": "table",
            "refId": "A"
          }
        ]
      }
    ]
  }
}

